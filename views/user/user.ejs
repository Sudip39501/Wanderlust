<% layout('./layouts/boilerplate') -%>

 <div class="row mt-3">
    <h2 class="col-6 offset-3">Signup to Wonderlust:</h2>
    <div class="col col-6 offset-3">
         <form action="/signup" method="post" class="needs-validation" novalidate>
             <div >
                <label for="username" class="form-label">Username :</label>
                <input name="username"  id="username" type="text"  class="form-control" required>
                <div class="valid-feedback">Username looks good</div>
                <div class="invalid-feedback"> Please Enter a unique username</div>
            </div>
            <div  >
                <label for="email" class="form-label">Email:</label>
                <input name="email"  id="email" type="email"  class="form-control" required>
                <div class="valid-feedback">email looks good</div>
                <div class="invalid-feedback"> Please Enter a valid email address</div>
            </div>
            <div >
                <label for="password" class="form-label">password:</label>
                <input name="password"  id="password" type="password"  class="form-control" required>
                <div class="valid-feedback">strong password</div>
                <div class="invalid-feedback"> Please Enter a strong password</div>
            </div>
            <button class="btn btn-success mt-3">SignUp</button>
         </form>
    </div>
</div>